<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="2dp"
    android:paddingLeft="@dimen/spinner_padding_left_right"
    android:paddingRight="@dimen/spinner_padding_left_right"
    android:paddingTop="@dimen/spinner_padding_top_bottom"
    android:background="@color/list_item_front"
    android:paddingBottom="@dimen/spinner_padding_top_bottom">

    <TextView
        android:id="@+id/spinner_item_textview"
        android:layout_width="wrap_content"
        android:textSize="@dimen/spinner_text_size"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spinner_padding_left_right"
        android:paddingRight="@dimen/spinner_padding_left_right"
        android:paddingTop="@dimen/spinner_padding_top_bottom"
        android:background="@color/list_item_front"
        android:paddingBottom="@dimen/spinner_padding_top_bottom" />

</LinearLayout>