<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/from_course_spinner"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/spinner_padding_left_right"
        android:paddingRight="@dimen/spinner_padding_left_right"
        android:paddingTop="@dimen/spinner_padding_top_bottom"
        android:background="@color/list_item_front"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/spinner_padding_top_bottom"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:id="@+id/inverse_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/none"
        android:src="@drawable/icon_arrows_two_directions_left_right" />

    <Spinner
        android:id="@+id/to_course_spinner"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/spinner_padding_left_right"
        android:paddingRight="@dimen/spinner_padding_left_right"
        android:paddingTop="@dimen/spinner_padding_top_bottom"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/spinner_padding_top_bottom"
        android:layout_height="wrap_content"
        android:background="@color/list_item_front"
        android:layout_alignParentRight="true" />

</RelativeLayout>